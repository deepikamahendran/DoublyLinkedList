import java.util.*;
public class Main
{
	public static void main(String[] args)
	{
	    Scanner s=new Scanner(System.in);
	    int  n= s.nextInt();
	    for(int i =0;i<=n;i++)
	    {
	        int val=1;
	        for(int space=1;space<=n-i;space++)
	        {
	        System.out.print(" ");
	        }
	        for(int j=1;j<=i;j++)
	        {
	            System.out.print(val+ " ");
	            val=val*(i-j)/j;
	        }
	        System.out.println();
	    }
	}
}
